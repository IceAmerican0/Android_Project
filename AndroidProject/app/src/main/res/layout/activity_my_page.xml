<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".Activity.MyPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="돌아가기"
            android:textColor="#442C2E"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0px"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="프로필"
            android:textColor="#442C2E"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0px"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="활동내역"
            android:textColor="#442C2E"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/profileEditContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    >
                    <FrameLayout
                        android:id="@+id/layout_icon_mypage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="WebViewLayout">
                        <ImageView
                            android:id="@+id/iv_icon_maypage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/kakao_default_profile_image"
                            />
                        <WebView
                            android:id="@+id/wv_icon_maypage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:visibility="invisible"
                            android:src="@android:drawable/sym_action_email"
                            />
                    </FrameLayout>
                </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_name_mypage"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="26dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="다른 고객님이라면,"
                                    android:textColor="#000000"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/tv_logout_mypage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="logout"
                                    android:textColor="#00BCD4"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="회원정보"
                />
            <ListView
                android:id="@+id/lv_item_mypage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/myAskTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="문의하기"
                android:textColor="#646464"
                android:background="@color/color5"
                android:textSize="16sp"
                android:padding="10dp"
                android:textStyle="bold" />
            <ListView
                android:id="@+id/lv_item_mypage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
